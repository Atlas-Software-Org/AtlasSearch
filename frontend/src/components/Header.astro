---
import UserIcon from './user/UserIcon';

interface Props {
    background: boolean;
}
const { background } = Astro.props;
---

<header class={'flex h-16 w-full items-center ' + (background ? 'bg-neutral-700/25' : '')}>
    <h1 class="p-2 text-3xl text-nowrap"><a href="/">Atlas Search</a></h1>
    <slot />
    <UserIcon client:load />
</header>
