---
import UserIcon from './user/UserIcon';
import type { Props as UserProps } from '../components/user/UserIcon';

interface Props {
    user?: UserProps;
}
const { user } = Astro.props;
---

<header class="flex h-16 w-full items-center bg-neutral-700/75">
    <h1 class="p-2 text-3xl text-nowrap"><a href="/">Atlas Search</a></h1>
    <slot />
    <UserIcon client:load {...user} />
</header>
