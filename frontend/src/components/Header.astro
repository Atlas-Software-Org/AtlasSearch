---
import UserIcon from './user/UserIcon';

interface Props {
    background: boolean;
}
const { background } = Astro.props;
---

<header class={'flex h-16 w-full items-center ' + (background ? 'bg-zinc-700' : '')}>
    <h1 class="p-2 text-3xl"><a href="/">Search</a></h1>
    <slot />
    <UserIcon client:load />
</header>
