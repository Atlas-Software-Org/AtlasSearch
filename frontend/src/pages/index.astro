---
import Layout from '../components/Layout.astro';
import SearchBar from '../components/search/SearchBar';
import Header from '../components/Header.astro';
---

<Layout 
  title="Atlas Search" 
  description="Find webpages instantly with Atlas Search."
  class:list={[
    'relative',
    'min-h-screen',
    'bg-zinc-950',
    'text-white',
    'select-none',
    'overflow-hidden',
    'font-sans',
  ]}
>
  <Header />

  <!-- Improved gradient backgrounds with multiple elements for depth -->
  <div class="fixed inset-0 z-0">
    <div class="absolute bottom-0 left-1/2 w-[40rem] h-[40rem] -translate-x-1/2 translate-y-1/3 bg-gradient-to-r from-teal-500 to-emerald-600 rounded-full blur-3xl opacity-15"></div>
    <div class="absolute top-20 right-20 w-[25rem] h-[25rem] bg-gradient-to-l from-cyan-400 to-blue-600 rounded-full blur-3xl opacity-10"></div>
    <div class="absolute bottom-20 left-20 w-[20rem] h-[20rem] bg-gradient-to-tr from-purple-500 to-teal-400 rounded-full blur-3xl opacity-10"></div>
  </div>

  <!-- Subtle grid pattern overlay -->
  <div class="fixed inset-0 bg-[url('/grid-pattern.svg')] bg-repeat opacity-5 z-0"></div>

  <main class="z-10 flex flex-col items-center justify-center px-6 py-16 md:py-32 relative">
    <!-- Logo or branding element -->
    <div class="mb-8 animate-fade-in-down">
      <div class="flex items-center justify-center mb-2">
        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-emerald-400 to-cyan-500 flex items-center justify-center shadow-lg shadow-cyan-500/20">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-white">
            <path d="M11.7 2.805a.75.75 0 01.6 0A60.65 60.65 0 0122.83 8.72a.75.75 0 01-.231 1.337 49.949 49.949 0 00-9.902 3.912l-.003.002-.34.18a.75.75 0 01-.707 0A50.009 50.009 0 007.5 12.174v-.224c0-.131.067-.248.172-.311a54.614 54.614 0 014.653-2.52.75.75 0 00-.65-1.352 56.129 56.129 0 00-4.78 2.589 1.858 1.858 0 00-.859 1.228 49.803 49.803 0 00-4.634-1.527.75.75 0 01-.231-1.337A60.653 60.653 0 0111.7 2.805z" />
            <path d="M13.06 15.473a48.45 48.45 0 017.666-3.282c.134 1.414.22 2.843.255 4.285a.75.75 0 01-.46.71 47.878 47.878 0 00-8.105 4.342.75.75 0 01-.832 0 47.877 47.877 0 00-8.104-4.342.75.75 0 01-.461-.71c.035-1.442.121-2.87.255-4.286A48.4 48.4 0 016 13.18v1.27a1.5 1.5 0 00-.14 2.508c-.09.38-.222.753-.397 1.11.452.213.901.434 1.346.661a6.729 6.729 0 00.551-1.608 1.5 1.5 0 00.14-2.67v-.645a48.549 48.549 0 013.44 1.668 2.25 2.25 0 002.12 0z" />
            <path d="M4.462 19.462c.42-.419.753-.89 1-1.394.453.213.902.434 1.347.661a6.743 6.743 0 01-1.286 1.794.75.75 0 11-1.06-1.06z" />
          </svg>
        </div>
      </div>
      <h1 class="text-4xl md:text-5xl font-bold text-center bg-gradient-to-r from-cyan-300 via-white to-emerald-300 text-transparent bg-clip-text">Atlas Search</h1>
      <p class="text-zinc-400 text-center mt-2 max-w-md mx-auto">Discover the web with precision and speed</p>
    </div>

    <!-- Search container with enhanced styling -->
    <div class="w-full max-w-2xl animate-fade-in">
      <div class="p-8 backdrop-blur-xl bg-white/10 border border-white/20 rounded-2xl shadow-xl hover:shadow-cyan-500/30 transition-all duration-300 group">
        <SearchBar client:load />
        
        <!-- Popular searches or tags -->
        <div class="mt-6 flex flex-wrap justify-center gap-2">
          <span class="text-xs text-zinc-400">Popular:</span>
          {['Technology', 'Science', 'News', 'Travel'].map(tag => (
            <button class="px-3 py-1 text-xs rounded-full bg-white/5 hover:bg-white/15 text-zinc-300 hover:text-cyan-300 border border-white/10 transition-all">
              {tag}
            </button>
          ))}
        </div>
      </div>
      
      <!-- Features highlights -->
      <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="p-4 rounded-xl bg-white/5 backdrop-blur-md border border-white/10 flex flex-col items-center text-center group hover:bg-white/10 transition-all">
          <div class="w-10 h-10 rounded-full bg-cyan-500/20 flex items-center justify-center mb-3 group-hover:bg-cyan-500/30 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-cyan-400">
              <path fill-rule="evenodd" d="M14.615 1.595a.75.75 0 01.359.852L12.982 9.75h7.268a.75.75 0 01.548 1.262l-10.5 11.25a.75.75 0 01-1.272-.71l1.992-7.302H3.75a.75.75 0 01-.548-1.262l10.5-11.25a.75.75 0 01.913-.143z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-sm font-medium text-white">Lightning Fast</h3>
          <p class="text-xs text-zinc-400 mt-1">Results in milliseconds</p>
        </div>
        
        <div class="p-4 rounded-xl bg-white/5 backdrop-blur-md border border-white/10 flex flex-col items-center text-center group hover:bg-white/10 transition-all">
          <div class="w-10 h-10 rounded-full bg-emerald-500/20 flex items-center justify-center mb-3 group-hover:bg-emerald-500/30 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-emerald-400">
              <path fill-rule="evenodd" d="M3.792 2.938A49.069 49.069 0 0112 2.25c2.797 0 5.54.236 8.209.688a1.857 1.857 0 011.541 1.836v1.044a3 3 0 01-.879 2.121l-6.182 6.182a1.5 1.5 0 00-.439 1.061v2.927a3 3 0 01-1.658 2.684l-1.757.878A.75.75 0 019.75 21v-5.818a1.5 1.5 0 00-.44-1.06L3.13 7.938a3 3 0 01-.879-2.121V4.774c0-.897.64-1.683 1.542-1.836z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-sm font-medium text-white">Smart Filters</h3>
          <p class="text-xs text-zinc-400 mt-1">Find exactly what you need</p>
        </div>
        
        <div class="p-4 rounded-xl bg-white/5 backdrop-blur-md border border-white/10 flex flex-col items-center text-center group hover:bg-white/10 transition-all">
          <div class="w-10 h-10 rounded-full bg-purple-500/20 flex items-center justify-center mb-3 group-hover:bg-purple-500/30 transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-purple-400">
              <path fill-rule="evenodd" d="M12 1.5a.75.75 0 01.75.75V4.5a.75.75 0 01-1.5 0V2.25A.75.75 0 0112 1.5zM5.636 4.136a.75.75 0 011.06 0l1.592 1.591a.75.75 0 01-1.061 1.06l-1.591-1.59a.75.75 0 010-1.061zm12.728 0a.75.75 0 010 1.06l-1.591 1.592a.75.75 0 01-1.06-1.061l1.59-1.591a.75.75 0 011.061 0zm-6.816 4.496a.75.75 0 01.82.311l5.228 7.917a.75.75 0 01-.777 1.148l-2.097-.43 1.045 3.9a.75.75 0 01-1.45.388l-1.044-3.899-1.601 1.42a.75.75 0 01-1.247-.606l.569-9.47a.75.75 0 01.554-.68zM3 10.5a.75.75 0 01.75-.75H6a.75.75 0 010 1.5H3.75A.75.75 0 013 10.5zm14.25 0a.75.75 0 01.75-.75h2.25a.75.75 0 010 1.5H18a.75.75 0 01-.75-.75zm-8.962 3.712a.75.75 0 010 1.061l-1.591 1.591a.75.75 0 11-1.061-1.06l1.591-1.592a.75.75 0 011.06 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-sm font-medium text-white">AI Powered</h3>
          <p class="text-xs text-zinc-400 mt-1">Smart results ranking</p>
        </div>
      </div>
    </div>
  </main>

  <footer class="fixed bottom-0 inset-x-0 z-20 p-4 flex justify-between items-center">
    <div class="bg-white/10 backdrop-blur-md rounded-xl px-4 py-2 shadow-md hover:shadow-cyan-400/30 transition-all duration-300 border border-white/10">
      <a href="/crawl" class="text-cyan-300 hover:text-cyan-200 flex items-center gap-2 text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
          <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
        </svg>
        Add missing webpages
      </a>
    </div>
    
    <div class="bg-white/10 backdrop-blur-md rounded-xl px-4 py-2 shadow-md border border-white/10 text-xs text-zinc-500">
      Â© 2025 Atlas Search
    </div>
  </footer>

  <style>
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @keyframes fadeIn {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }
    
    .animate-fade-in-down {
      animation: fadeInDown 0.8s ease-out forwards;
    }
    
    .animate-fade-in {
      animation: fadeIn 1s ease-out 0.3s forwards;
      opacity: 0;
    }
  </style>
</Layout>